<?xml version="1.0"?>
<launch>
  <arg name="launch_camera_topics" default="true" doc="Launch realsense topics. If this is launched, no other application can use the realsecamera"/>
  <arg name="robot_ip" default="192.168.0.100" doc="IP address by which the robot can be reached."/>
  <arg name="kinematics_config" default="$(find ur-ros-driver-config)/config/ur5_calibration.yaml" doc="Kinematics config file used for calibration correction. This will be used to verify the robot's calibration is matching the robot_description."/>
  <arg name="controller_config_file" default="$(find ur-ros-driver-config)/config/ur5_controllers.yaml" doc="Custom controllers"/>

  <include file="$(find ur_robot_driver)/launch/ur5_bringup.launch" pass_all_args="true"/>
  <include file="$(find dh_gripper_driver)/launch/dh_gripper.launch"/>

  <!-- launch the camera topics -->
  <include file="$(find realsense2_camera)/launch/rs_camera.launch" if="$(arg launch_camera_topics)">
    <arg name="enable_fisheye" value="false"/>
    <arg name="enable_infra1" value="false"/>
    <arg name="enable_infra2" value="false"/>
    <arg name="enable_gyro" value="false"/>
    <arg name="enable_accel" value="false"/>
    <arg name="pointcloud_texture_stream" value="RS2_STREAM_ANY"/>
    <arg name="filters" value="pointcloud"/>
  </include>
  
</launch>
